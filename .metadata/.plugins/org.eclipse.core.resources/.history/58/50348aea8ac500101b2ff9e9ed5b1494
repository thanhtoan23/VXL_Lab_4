#ifndef INC_SCHEDULER_H_
#define INC_SCHEDULER_H_

#include "main.h"

#define SCH_MAX_TASKS   40
#define NO_TASK_ID      SCH_MAX_TASKS // Định nghĩa mã lỗi khi thêm task

typedef struct {
    void (*pTask)(void);
    uint32_t Delay;
    uint32_t Period;
    uint8_t RunMe;
} sTask;

// BỔ SUNG: Biến đếm số lượng task hiện có trong Heap
extern uint32_t Sch_Task_Count;

void SCH_Init(void);
// Sửa đổi kiểu trả về để trả về ID (index)
uint32_t SCH_Add_Task(void (*pFunction)(), uint32_t DELAY, uint32_t PERIOD);
void SCH_Update(void);
void SCH_Dispatch_Tasks(void);

// BỔ SUNG: Hàm xóa task (cần cho logic one-shot)
uint8_t SCH_Delete_Task(uint32_t taskID);

#endif
