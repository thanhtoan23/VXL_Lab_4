#ifndef SCHEDULER_H
#define SCHEDULER_H

#include <stdint.h>

// Cấu trúc Task
typedef struct Task {
    void (*pTask)(void);   // Pointer đến hàm Task
    uint32_t execute_time; // Thời gian tuyệt đối (ticks) cần chạy
    uint32_t period;       // Chu kỳ lặp lại (0 cho one-shot)
    uint8_t active;        // Cờ hoạt động
    struct Task* next;     // Con trỏ Linked List
} sTask;

// Cấu hình Timing Wheel
#define SCH_MAX_TASKS 40
#define WHEEL_SIZE 256
#define WHEEL_MASK (WHEEL_SIZE - 1)

// Function prototypes
void SCH_Init(void);
void SCH_Update(void);
void SCH_Dispatch_Tasks(void);
uint32_t SCH_Add_Task(void (*pFunction)(), uint32_t DELAY, uint32_t PERIOD);
//uint8_t SCH_Delete_Task(uint32_t taskID);

#endif
